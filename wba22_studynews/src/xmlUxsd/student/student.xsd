<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	
	<xs:element name="student">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="name" type="xs:string" />
				<xs:element name="kennung" type="xs:string"/>	
				<xs:element name="studiengang" type="xs:string" />
				<xs:element name="semester" type="xs:integer" />
				<xs:element name="email" type="xs:string" />
				<xs:element name="abos" type="ct_abos" />
			</xs:sequence>
			<xs:attribute name="id" type="xs:integer" />
		</xs:complexType>
	</xs:element>
	
	<xs:complexType name="ct_abos">
		<xs:sequence>
			<xs:element name="module" type="ct_modul" />
			<xs:element name="dozent" type="ct_dozent" />
		</xs:sequence>
	</xs:complexType>
	
	<xs:complexType name="ct_modul">
		<xs:sequence>
			<xs:element name="modul" minOccurs="0" maxOccurs="unbounded">
				<xs:complexType>
					<xs:simpleContent>
						<xs:extension base="xs:string">
							<xs:attribute name="kuerzel" type="xs:string" />
						</xs:extension>
					</xs:simpleContent>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	
	<xs:complexType name="ct_dozent">
		<xs:sequence>
			<xs:element name="dozent" minOccurs="0" maxOccurs="unbounded">
				<xs:complexType>
					<xs:simpleContent>
						<xs:extension base="xs:string">
							<xs:attribute name="dozentId" type="xs:integer" />
						</xs:extension>
					</xs:simpleContent>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	
</xs:schema>